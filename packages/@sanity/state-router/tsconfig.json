{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "test/**/*.ts"],
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "lib/",
    "target": "es2016",
    "declaration": true,
    "lib": ["dom", "es2016"]
  }
}
